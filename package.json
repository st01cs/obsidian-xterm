{
	"name": "obsidian-xterm",
	"version": "1.0.0",
	"description": "A fully functional terminal emulator for Obsidian using xterm.js that provides real shell access within the editor.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"terminal",
		"xterm",
		"shell"
	],
	"author": "st01cs",
	"license": "MIT",
	"dependencies": {
		"@xterm/xterm": "^5.5.0",
		"node-fetch": "^3.3.2",
		"socket.io-client": "^4.8.1"
	},
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
